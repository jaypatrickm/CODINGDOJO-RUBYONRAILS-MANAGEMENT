<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h3>Listing users</h3>
			<table id="user-listings" class="table table-bordered table-hover table-striped">
				<thead>
					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Email</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= user.first_name %></td>
						<td><%= user.last_name %></td>
						<td><%= user.email_address %></td>
						<td>
							<a href="/users/<%= user.id %>" class="btn btn-link">Show</a> | 
							<a href="/users/<%= user.id %>/edit" class="btn btn-link">Edit</a> | 
							<form class="form-inline" action="/users/<%= user.id %>" method="post">
								<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
								<input type="hidden" name="_method" value="delete">
								<input type="submit" class="btn btn-link" value="Destroy">
							</form>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<a href="/users/new" class="btn btn-link">Create New User</a>
		</div>
	</div>
</div>